<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/undercromo_gray"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/undercromo_gray_inputs"
        android:padding="8dp">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/inputs_style"
            android:hint="Search"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/undercromo_gray_placeholder"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_search" />

        <ImageView
            android:id="@+id/cart_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cart"
            android:contentDescription="Cart"
            android:padding="8dp"
            android:tint="@color/white"/>

        <ImageView
            android:id="@+id/favorites_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_favorite"
            android:contentDescription="Favorites"
            android:padding="8dp"
            android:tint="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:weightSum="4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/category_men"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="MEN"
            android:textColor="@color/white"
            android:background="@drawable/category_button"
            android:layout_marginEnd="6dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/category_woman"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="WOMAN"
            android:textColor="@color/white"
            android:background="@drawable/category_button"
            android:layout_marginEnd="6dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/category_kids"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="KIDS"
            android:textColor="@color/white"
            android:background="@drawable/category_button"
            android:layout_marginEnd="6dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/category_sale"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="SALE"
            android:textColor="@color/white"
            android:background="@drawable/category_button"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"/>
</LinearLayout>
